<!--        android:label="SearchPlaceFragment"-->
<!--        tools:layout="@layout/fragment_search_places">-->
<!--        <action-->
<!--            android:id="@+id/action_searchPlaceFragment_to_homeFragment"-->
<!--            app:destination="@id/homeFragment" />-->
<!--    </fragment>-->

    <fragment
        android:id="@+id/tabFragment"
        android:name="com.example.navigationapp.view.TabFragment"
        android:label="TabFragment"
        tools:layout="@layout/fragment_tab">
        <action
            android:id="@+id/action_tabFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_tabFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>

    <fragment
        android:id="@+id/informationFragment"
        android:name="com.example.navigationapp.view.InformationFragment"
        android:label="InformationFragment"
        tools:layout="@layout/fragment_information">
        <action
            android:id="@+id/action_informationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <dialog
        android:id="@+id/bottomSheetDialog"
        android:name="com.example.navigationapp.view.adapter.BottomSheetDialogFragment"
        android:label="bottomSheetDialog"
        tools:layout="@layout/bottom_sheet_map">
        <action
            android:id="@+id/action_bottomSheetDialog_to_homeFragment"
            app:destination="@id/homeFragment" />
    </dialog>



</navigation>
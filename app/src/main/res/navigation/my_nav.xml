<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_nav"
    app:startDestination="@id/splashFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.navigationapp.view.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.navigationapp.view.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_splashFragment_to_tabFragment"
            app:destination="@id/tabFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.navigationapp.view.LoginFragment"
        tools:layout="@layout/fragment_login"
        android:label="LoginFragment" >

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loginFragment_to_tabFragment"
            app:destination="@id/tabFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.navigationapp.view.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.navigationapp.view.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
<!--        <action-->
<!--            android:id="@+id/action_homeFragment_to_bottomSheetDialog"-->
<!--            app:destination="@id/bottomSheetDialog" />-->
        <action
            android:id="@+id/action_homeFragment_to_routeFragment"
            app:destination="@id/routeFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>




    <fragment
        android:id="@+id/tabFragment"
        android:name="com.example.navigationapp.view.TabFragment"
        android:label="TabFragment"
        tools:layout="@layout/fragment_tab">
        <action
            android:id="@+id/action_tabFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_tabFragment_to_informationFragment"
            app:destination="@id/informationFragment" />
    </fragment>

    <fragment
        android:id="@+id/informationFragment"
        android:name="com.example.navigationapp.view.InformationFragment"
        android:label="InformationFragment"
        tools:layout="@layout/fragment_information"/>

    <fragment
        android:id="@+id/routeFragment"
        android:name="com.example.navigationapp.view.RouteFragment"
        android:label="RouteFragment"
        tools:layout="@layout/fragment_route">

        <action
            android:id="@+id/action_routeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>


</navigation>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/bottom_sheet_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        app:behavior_hideable="true"
        app:behavior_peekHeight="30dp"
        android:gravity="center"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="#E8E5E5"
            android:gravity="center|top"
            android:textColor="@color/quantum_bluegrey950"
            android:text="Location Information"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunrise Riverside"
                android:textSize="50px"
                android:textColor="@color/black"
                android:id="@+id/tv_label"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyen Huu Tho, Nha Be, Ho Chi Minh"
                android:textColor="@color/black"
                android:textSize="30px"
                android:id="@+id/tv_detail"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_alt_route_24"
                android:id="@+id/btn_route"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_navigation_24"
                android:id="@+id/btn_start"
                android:layout_marginRight="20dp"/>

            <ImageButton
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add"
                android:src="@drawable/ic_baseline_add_circle_outline_24"/>

        </LinearLayout>

    </LinearLayout>
</layout>